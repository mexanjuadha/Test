<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/walktrough_1"
    android:padding="10dp"
    android:orientation="vertical"
    android:id="@+id/lin_back_wk"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/wi_img"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/txt_tittle_wk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Polpp Lorem "
        android:textSize="19sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:textColor="#DBD801" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingRight="50dp"
        android:gravity="center"
        android:paddingLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wi_txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Polpp Lorem ipsum dolor siamet consectur dolor consectur siamet consectur siamet "
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#DBD801" />
    </RelativeLayout>

    <Button
        android:id="@+id/wi_btn_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="Sambungkan dengan G+"
        android:layout_marginTop="10dp"
        android:textColor="#FFF" />
</LinearLayout>